            <div class="name data"><%= SPEAKERS[event[:speaker_id].to_sym][:name]%></div>
            <div class="twitter data"><%= event[:time] %></div>
          </div>
          <div class="right">
            <div class="bio">
              <h2><%= event[:title] %></h2>
              <%= event[:description] %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="right_day">
