<div id="schedule" class="scene">
  <a href="#speakers" id="speakers_link">Speakers</a>
  <div class="content">
    <h1 class="heading">Schedule</h1>
    <div class="left_day">
      <h2>Monday</h2>
      <table cellspacing="0" cellpadding="0" border="0">
        <% MONDAY.each do |event| %>
          <% crazy_id = "monday_#{event[:speaker_id]}_#{event[:time].gsub(' ', '').gsub(':','')}"%>
          <tr data-id="<%= crazy_id %>">
            <td class="time"><%= event[:time] %></td>
            <td class="title"><%= event[:title] %></td>
          </tr>
        <% end %>
      </table>
      <% MONDAY.each do |event| %>
        <% crazy_id = "monday_#{event[:speaker_id]}_#{event[:time].gsub(' ', '').gsub(':','')}"%>
        <div class="info_box" id="<%= crazy_id %>">
          <div class="close">close</div>
          <div class="left">
            <div class="name data"><%= SPEAKERS[event[:speaker_id].to_sym][:name]%></div>
            <div class="twitter data"><%= event[:time] %></div>
          </div>
          <div class="right">
            <div class="bio">
              <h2><%= event[:title] %></h2>
              <%= event[:description] %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="left_day">
      <h2>Tuesday</h2>
      <table cellspacing="0" cellpadding="0" border="0">
        <% TUESDAY.each do |event| %>
