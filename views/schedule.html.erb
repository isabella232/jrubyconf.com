<div id="schedule" class="scene">
  <a href="#speakers" id="speakers_link" class="red-button rotate-left">
    <div class="white-arrow arrow-left"></div>Speakers<div class="white-arrow arrow-right"></div>
  </a>
  <div class="content">
    <h1 class="heading">Schedule</h1>
    <% %w(Monday Tuesday Wednesday).each do |day| %>
    <div class="<%= day == "Wednesday" ? 'left_day' : 'right_day' %>">
      <h2><%= day %></h2>
      <table cellspacing="0" cellpadding="0" border="0">
        <% Object.const_get(day.upcase).each do |event| %>
          <tr class="schedule_row" data-id="<%= crazy_id(day, event) %>">
            <td class="time"><%= event[:time] %></td>
            <td class="title"><%= short_name(event) %><%= event[:title] %></td>
          </tr>
        <% end %>
      </table>
      <% Object.const_get(day.upcase).each do |event| %>
        <div class="info_box" id="<%= crazy_id(day, event) %>">
          <div class="close">close</div>
          <div class="left">
            <div class="name data"><%= speaker_names(event) %></div>
            <div class="twitter data"><%= event[:time] %></div>
          </div>
          <div class="right">
            <div class="bio">
              <h2><%= event[:title] %></h2>
              <%= event[:description] %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div> <!-- /#schedule -->
